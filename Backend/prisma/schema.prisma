generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  admin
  sales_executive
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  CONVERTED
  LOST
}

enum LeadSource {
  WEBSITE
  META_ADS
  GOOGLE_ADS
}

enum VechicleType {
  AC
  NON_AC
}

enum TripType {
  ONE_WAY
  ROUND_TRIP
}

enum Vechicle {
  Cars
  SUVs
  LuxuryCars
  TempoTraveller
  MiniBus
  LuxuryBus
}

model User {
  id        String   @id @default(uuid())
  fistName  String
  lastName  String?
  email     String   @unique
  password  String
  phone     String   @unique
  role      Role     @default(sales_executive)
  createdOn DateTime @default(now())
}

model Lead {
  id             Int          @id @default(autoincrement())
  fullName       String
  email          String?
  phone          String
  pickupAddress  String
  dropAddress    String
  pickupDateTime DateTime
  dropDateTime   DateTime
  passengers     Int
  Luggage        Int
  vechicle       Vechicle
  vechicleType   VechicleType @default(AC)
  tripType       TripType     @default(ONE_WAY)
  city           String
  source         LeadSource
  status         LeadStatus   @default(NEW)
  note           String?
  createdOn      DateTime     @default(now())
  updatedOn      DateTime     @updatedAt
}
