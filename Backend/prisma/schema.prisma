generator client {
  provider = "prisma-client"
  output = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  admin
  sales_executive
}

model User {
  id String @id @default(uuid())
  fistName String
  lastName String?
  email String @unique
  password String
  phone String @unique
  role Role @default(sales_executive)
  createdAt DateTime @default(now())
}

