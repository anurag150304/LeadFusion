generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  admin
  sales_executive
}

model User {
  id        String  @id @default(uuid())
  firstName String
  lastName  String?
  email     String  @unique
  password  String
  phone     String  @unique
  role      Role    @default(sales_executive)
}
